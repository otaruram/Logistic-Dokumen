// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-py"
}

datasource db {
  provider = "sqlite" // Atau "postgresql" jika pakai PostgresRender
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(cuid())
  email         String   @unique
  name          String?
  picture       String?
  
  // ðŸ”¥ DUA FIELD INI WAJIB ADA UTK FITUR BARU ðŸ”¥
  creditBalance Int      @default(3)
  createdAt     DateTime @default(now())

  logs          Logs[]
  ratings       Rating[]
  transactions  CreditTransaction[]
}

model Logs {
  id           Int      @id @default(autoincrement())
  userId       String
  timestamp    DateTime @default(now())
  filename     String
  kategori     String?
  nomorDokumen String?
  receiver     String?
  imagePath    String?
  summary      String?
  fullText     String?

  user         User     @relation(fields: [userId], references: [email])
}

model Rating {
  id         Int      @id @default(autoincrement())
  userId     String
  userName   String
  userAvatar String?
  stars      Int
  emoji      String
  message    String
  createdAt  DateTime @default(now())

  user       User     @relation(fields: [userId], references: [email])
}

model CreditTransaction {
  id        Int      @id @default(autoincrement())
  userId    String
  amount    Int
  type      String   // "DEDUCT" | "RESET" | "TOPUP"
  reason    String?
  timestamp DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id])
}
