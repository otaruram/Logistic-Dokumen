generator client {
  provider  = "prisma-client-py"
  interface = "asyncio"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String   @id @default(cuid())
  email           String   @unique
  name            String?
  picture         String?
  
  // ðŸ”¥ FITUR KREDIT & RESET
  tier            String   @default("FREE")
  creditBalance   Int      @default(3)      // Default 3 kredit saat daftar
  lastCreditReset DateTime @default(now()) 
  createdAt       DateTime @default(now())  // Patokan untuk Hapus Data Bulanan (H-7 Warning)

  // RELASI
  logs            Logs[]
  ratings         Rating[]
  transactions    CreditTransaction[]
}

model Logs {
  id           Int      @id @default(autoincrement())
  userId       String
  timestamp    DateTime @default(now())
  filename     String
  kategori     String?
  nomorDokumen String?
  receiver     String?
  imagePath    String?
  summary      String?
  fullText     String?

  user         User     @relation(fields: [userId], references: [email])
}

model Rating {
  id         Int      @id @default(autoincrement())
  userId     String
  userName   String
  userAvatar String?
  stars      Int
  emoji      String
  message    String
  createdAt  DateTime @default(now())

  user       User     @relation(fields: [userId], references: [email])
}

// Opsional: Untuk mencatat riwayat keluar masuk kredit
model CreditTransaction {
  id        Int      @id @default(autoincrement())
  userId    String
  amount    Int
  type      String   // Contoh: "DEDUCT" (Berkurang) atau "RESET" (Harian)
  reason    String?
  timestamp DateTime @default(now())

  user      User     @relation(fields: [userId], references: [email])
}
